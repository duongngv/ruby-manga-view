<% object.each do |item| %>
  <div class="col-sm-6 col-md-4 col-lg-3 p-b-50">
    <div class="block2">
      <% case item.status %>
      <% when "newly_created" %>
        <div class="block2-img wrap-pic-w of-hidden pos-relative block2-labelnew">
      <% when "newly_update" %>
        <div class="block2-img wrap-pic-w of-hidden pos-relative block2-labelupdated">
      <% when "hot" %>
        <div class="block2-img wrap-pic-w of-hidden pos-relative block2-labelhot">
      <% when "finished" %>
        <div class="block2-img wrap-pic-w of-hidden pos-relative block2-labelfinished">
      <% else %>
        <div class="block2-img wrap-pic-w of-hidden pos-relative block2-label">
      <% end %>
      <% if item.thumb.present? %>
        <%= image_tag item.thumb.url %>
      <% else %>
        <%= image_tag "/images/comic/not-found.png" %>
      <% end %>
        <div class="block2-overlay trans-0-4">
          <a href="#" class="block2-btn-addwishlist hov-pointer trans-0-4">
            <i class="icon-wishlist fa fa-heart icon_heart_alt" aria-hidden="true"></i>
            <i class="icon-wishlist fa fa-heart icon_heart dis-none" aria-hidden="true"></i>
          </a>
          <div class="block2-btn-addcart w-size1 trans-0-4">
            <%= link_to comic_path(item), class: "flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4" do %>
              <%= t "common.read_now" %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="block2-txt p-t-20">
        <%= link_to item.name, comic_path(item), class: "block2-name dis-block s-text3 p-b-5" %>
      </div>
    </div>
  </div>
<% end %>
