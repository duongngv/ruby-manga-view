<%= form_for current_user.relationships.find_by(comic_id: @comic.id),
             html: { method: :delete }, remote: true  do |f| %>
  <div><%= hidden_field_tag :like, Settings.like %></div>
  <li class="li03">
    <span class="btn-like-parent">
      <i class="fa fa-thumbs-up"></i>&nbsp;
      <%= f.submit t(".unlike"), class: "btn-like" %>
    </span>
  </li>
<% end %>
